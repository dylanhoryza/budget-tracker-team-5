<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="container main-content mt-5">
  <div class="row">
    <div class="col-md-6">
      <form>
        <div class="form-group">
          <label for="monthlyIncome">Monthly Income</label>
          <div class="dollar-sign">
            <input
              type="text"
              class="form-control"
              id="monthly-income"
              placeholder="Enter monthly income"
            />
          </div>

        </div>
        <div class="form-group">
          <label for="budgetGoal">Savings Goal</label>
          <div class="dollar-sign">
            <input
              type="text"
              class="form-control"
              id="budget-goal"
              placeholder="Enter savings goal"
            />
          </div>

        </div>
        <button
          type="submit"
          class="btn btn-primary"
          id="goals-btn"
        >Submit</button>
      </form>
    </div>

    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Expenses</h5>
          <div class="container" id="expense-container">
            {{#if budgets.length}}
              <div class="row expense-row" id="expense-row">
                <div class="col-md-6">
                  <div class="form-group budget-id">
                    <label for="categorySelect"></label>
                    <select
                      class="form-control custom-select category-select2"
                      id="categorySelect"
                    >
                      <option disabled selected>Select Category</option>
                      {{#each categories}}
                        <option
                        class="category-select"
                          id="category_id"
                          value="{{this.id}}"
                        >{{this.name}}</option>
                      {{/each}}

                    </select>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="form-group">
                    <label for="costInput"></label>
                    <div class="input-group">
                      <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                      </div>
                      <input
                        type="text"
                        class="form-control cost-input"
                        id="costInput"
                        placeholder="Enter cost"
                      />
                    </div>
                  </div>
                </div>
                <div class="col-md-1 align-self-end">
                  <button
                    type="submit"
                    class="btn btn-primary save-btn"
                    id="save-btn"
                  >+</button>
                </div>
                <div class="col-md-1 align-self-end">
                  <button type="submit" class="btn btn-danger delete-btn" data-id="{{budgets.id}}">-</button>
                </div>
              </div>
            {{/if}}
          </div>

          <div class="align-self-center text-center">
            <button
              type="submit"
              id="add-expense-btn"
              class="btn btn-primary"
            >Add expense</button>
          </div>
          <h6 class="total-header">Total:</h6>
        </div>

      </div>
    </div>

  </div>
</div>

<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="/js/dashboard.js"></script>